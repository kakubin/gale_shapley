#!/usr/bin/env bash

VERSION=$1

if [ -z "$VERSION" ]; then
  echo "Usage: $0 <version>"
  exit 1
fi

printf "# frozen_string_literal: true\n\nmodule GaleShapley\n  VERSION = \'$VERSION\'\nend\n" > ./lib/gale_shapley/version.rb
git commit -m "Bump version for $VERSION"
git push
git tag v$VERSION
git push --tags
gem build gale_shapley.gemspec
gem push "gale_shapley-$VERSION.gem"
rm "gale_shapley-$VERSION.gem"
